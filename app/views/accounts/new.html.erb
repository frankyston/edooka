<div class="col-md-6 col-md-offset-3 panel panel-dafault">
	<div class="panel-body">
		<h2>Create an Account</h2>

		<%= form_for @account do |f| %>

			<%= form_group_for f, :pitch  do %>
				<div class="input-group">
					<%= f.text_area :pitch, class: 'form-control' %>
				</div>
			<% end %>

			<%= form_group_for f, :subdomain do %>
				<div class="input-group">
					<%= f.text_field  :subdomain, class: 'form-control' %>
					<span class="input-group-addon">.edools.com.br</span>
				</div>
			<% end %>

			<%= f.submit  %>
		<% end %>
	</div>
</div>